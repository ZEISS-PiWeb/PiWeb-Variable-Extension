{
    "$schema": "http://json-schema.org/schema",
    "$defs": {
        "localization": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            ]
        },        
        "raw_data_source": {
            "enum": [
                "none",
                "part",
                "characteristic",
                "measurement",
                "measurement_values"
            ]
        },
        "raw_data_sources": {
            "anyOf": [
                {
                    "$ref": "#/$defs/raw_data_source"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/raw_data_source"
                    }
                }
            ]
        },  
        "variable_categories": {
            "enum": [
                "Global",
                "Math",
                "String",
                "TimeSpan",
                "List",
                "Comparison",
                "TypeConversions",
                "UserDefined"
            ]
        },
        "variable_category": {
            "anyOf": [
                {
                    "$ref": "#/$defs/variable_categories"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "properties": {
        "name": {
            "type": "string",
            "description": "Defines the package identificator of the extension package"
        },
        "version": {
            "type": "string",
            "description": "Defines the version of the extension package"
        },
        "main": {
            "type": "string",
            "description": "Defines the path to the folder inside the package that contains the `index.js` file."
        },
        "engines": {
            "type:": "object",
            "description": "Defines the supported engine versions of the extension package",
            "properties": {
                "piweb": {
                    "type": "string",
                    "description": "Defines the supported piweb engine versions of the extension package"
                }
            },
            "additionalProperties": false
        },
        "piweb_actions": {
            "type:": "object",
            "description": "Defines additional actions",
            "properties": {
                "load": {
                    "description": "Defines the actions to be executed when the package was loaded",
                    "enum": [
                        "compile_typescript"
                    ]
                }
            },
            "additionalProperties": false
        },
        "piweb_extension": {
            "type:": "object",
            "description": "Defines the content of the extension package",
            "properties": {
                "type": {
                    "description": "Defines the type of the extension package",
                    "enum": [
                        "variable"
                    ]
                },
                "categories": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "$ref": "#/$defs/localization"
                            },
                            "priority": {
                                "type": "integer"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "variables": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "$ref": "#/$defs/localization"
                            },
                            "description": {
                                "$ref": "#/$defs/localization"
                            },
                            "category": {
                                "$ref": "#/$defs/variable_category"
                            },
                            "measurement_data_type": {
                                "enum": [
                                    "none",
                                    "measurements",
                                    "measurement_values"
                                ]
                            },
                            "raw_data_sources": {
                                "$ref": "#/$defs/raw_data_sources"
                            },
                            "volume_sources": {
                                "$ref": "#/$defs/raw_data_sources"
                            },
                            "fetch_defects": {
                                "type": "boolean"
                            },
                            "fetch_formplots": {
                                "type": "boolean"
                            },
                            "parameters": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "$ref": "#/$defs/localization"
                                        },
                                        "description": {
                                            "$ref": "#/$defs/localization"
                                        },
                                        "datatype": {
                                            "enum": [
                                                "integer",
                                                "double",
                                                "string",
                                                "datetime"
                                            ]
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "type"
            ]
        },
        "additionalProperties": false
    }
}